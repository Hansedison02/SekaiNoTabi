@model IEnumerable<Destination>

@{
    ViewData["Title"] = "Destinations - Sekai no Tabi";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">Natural Wonders</h1>
    
    <div class="space-y-6">
        @foreach (var destination in Model)
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-[1.02]">
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-[70%] p-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">@destination.Name</h2>
                        <p class="text-gray-600 text-sm mb-2">@destination.Location</p>
                        <p class="text-gray-700">@destination.Description</p>
                    </div>
                    <div class="md:w-[30%] bg-gray-200 h-48 md:h-auto">
                        <div class="w-full h-full bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                            <img src="@destination.ImageUrl" alt="@destination.Name" class="w-full h-full object-cover">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>